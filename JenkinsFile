pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'thaihihi/demo:lastest'
        DOCKER_REGISTRY_URL = 'https://index.docker.io/v1/'
        DOCKER_REGISTRY_CREDENTIALS_ID = 'docker-hub'
        DOCKER_USERNAME = 'thaihihi'
        DOCKER_PASSWORD='@Thai143'
    }

    stages {
        stage('Build Docker image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE}")
                }
            }
        }

        stage('Push Docker image to registry') {
             steps {
                withCredentials([usernamePassword(credentialsId: 'docker-hub', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                script {
                    sh "docker login -u ${DOCKER_USERNAME} -p ${DOCKER_PASSWORD}"
                    docker.withRegistry("https://${DOCKER_REGISTRY_URL}", "${DOCKER_REGISTRY_CREDENTIALS_ID}") {
                        docker.image("${DOCKER_IMAGE}").push()
                }
            }
        }
    }
        }

        stage('Pull Docker image from registry') {
            steps {
                script {
                    docker.withRegistry("https://${DOCKER_REGISTRY_URL}", "${DOCKER_REGISTRY_CREDENTIALS_ID}") {
                        docker.image("${DOCKER_IMAGE}").pull()
                    }
                }
            }
        }

        stage('Run Docker image') {
            steps {
                script {
                    docker.run("${DOCKER_IMAGE}")
                }
            }
        }
    }
}
